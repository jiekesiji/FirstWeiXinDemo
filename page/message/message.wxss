.container{
  display: flex;
  flex: 1;
  flex-direction: column;
}

.item_container{
  display: flex;
  flex-direction: row;
  padding: 7px;
  width: 100%;
}

.item_container_sub{
  width: 100%;
  align-self: center;
  justify-content: flex-start;
  display: flex;
  margin-left: 15px;
  flex-direction: column;
}

.item_img{
  width: 120px;
  height: 60px;
}

.item_title{

  margin-top: 3px;
  text-shadow:thistle;
  font-size: 15px;
  color:"#797575";
}

.item_desc{
  margin-top: 15px;
  font-size: 12px;
  color:darkgrey;
}

.item_time{
  width: 120px;
  font-size: 12px;
  color:darkgrey;
  
}